<manifest xmlns:android="http://schemas.android.com/apk/res/android"
			 package="com.dimowner.airycompass">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-feature android:name="android.hardware.screen.portrait" android:required="false" />
	<uses-feature android:name="android.hardware.telephony" android:required="false" />
	<uses-feature android:name="android.hardware.location" android:required="false" />
	<uses-feature android:name="android.hardware.location.gps" android:required="false" />
	<uses-feature android:name="android.hardware.camera2" android:required="false" />
	<uses-feature android:name="android.hardware.microphone" android:required="false" />

	<application
			android:allowBackup="false"
			android:icon="@mipmap/ic_launcher"
			android:roundIcon="@mipmap/ic_launcher"
			android:hardwareAccelerated="@bool/useHardwareAcceleration"
			android:name="com.dimowner.airycompass.ACApplication"
			android:label="@string/app_name"
			android:theme="@style/AppTheme">

		<activity android:name="com.dimowner.airycompass.app.main.MainActivity"
					 android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name="com.dimowner.airycompass.app.settings.SettingsActivity"
					 android:screenOrientation="portrait"/>
	    <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a911efb38fc3ed01944c7ea4410acde51d847864" />
    </application>

</manifest>
